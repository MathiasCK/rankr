{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@/*": ["src/*"],
      "@polls": ["src/polls/index"],
      "@polls/*": ["src/polls/*"],
      "@utils/*": ["src/utils/*"],
      "@nestjs/common": ["@nestjs/common/"]
    }
  }
}
